@*Kategori sınıfı EntityLayer katmanı içindeki Concreate klasörü içerisindeki Category sınıfından verileri alıyorum.*@

@using EntityLayer.Concrete
@model List<Category>


@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Kategori Listeleme Sayfası</h2>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Category/AddCategory" class="btn btn-warning">YENİ KATEGORİ</a>