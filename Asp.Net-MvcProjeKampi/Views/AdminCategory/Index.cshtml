@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Listeleme Sayfası</h2>
<br />

<table class="table table-hover">

    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>


    @foreach (var item in Model)
    {
    <tr>
        <td>@item.CategoryID</td>
        <td>@item.CategoryName</td>
        <td>@item.CategoryDescription</td>
        <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
        <td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
        <td><a href="#" class="btn btn-warning">Başlıklar</a></td>
        
    </tr>
    }
</table>
<a href="/AdminCategory/AddCategory" class="btn btn-primary">Yeni Kategori</a>